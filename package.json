{
	"name": "stylelint-config-firefoxic",
	"description": "Stylelint shareable config for the firefoxic code guide",
	"version": "3.0.1",
	"type": "module",
	"exports": "./.stylelintrc",
	"dependencies": {
		"@stylistic/stylelint-plugin": "^2.0.0",
		"postcss-scss": "^4.0.9"
	},
	"peerDependencies": {
		"stylelint": "^16.2.1"
	},
	"files": [
		"./.stylelintrc"
	],
	"engines": {
		"node": "^18.12 || >=20.9"
	},
	"license": "MIT",
	"author": {
		"name": "Sergey Artemov",
		"email": "firefoxic.dev@gmail.com"
	},
	"homepage": "https://github.com/firefoxic/stylelint-config-firefoxic#readme",
	"bugs": {
		"url": "https://github.com/firefoxic/stylelint-config-firefoxic/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/firefoxic/stylelint-config-firefoxic.git"
	},
	"keywords": [
		"style",
		"lint",
		"linter",
		"stylelint",
		"codeguide"
	],
	"scripts": {
		"prepare": "husky",
		"lint:spaces": "ec",
		"lint:scripts": "eslint .",
		"lint": "pnpm /^lint:/",
		"pretest": "pnpm lint",
		"test": "node --test",
		"preversion": "pnpm test",
		"postversion": "pnpm publish",
		"postpublish": "git push origin --all && git push origin --tags"
	},
	"devDependencies": {
		"editorconfig-checker": "^5.1.3",
		"eslint": "^8.56.0",
		"husky": "^9.0.10",
		"stylelint": "^16.2.1"
	}
